<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="chV.project.models.Files" table="files" schema="oneton">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="description">
            <column name="description" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="code">
            <column name="code" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="size">
            <column name="size" sql-type="int(11)"/>
        </property>
        <property name="file">
            <column name="file" sql-type="longblob"/>
        </property>
        <property name="fileName">
            <column name="fileName" sql-type="varchar(200)" length="200"/>
        </property>
    </class>
</hibernate-mapping>